/* pages/undercover/ready.wxss */
.main {
  padding: 24rpx;
  height: 100%;
  box-sizing: border-box;
}

.detail-label {
  align-self: flex-start;
  font-size: 30rpx;
  font-weight: bold;
}

.detail {
  margin: 16rpx 0;
}

button {
  width: 100% !important;
  margin: 16rpx;
  color: white !important;
}

button:active {
  opacity: 0.7;
}

.create {
  background-color: #f97316;
}

.join {
  background-color: #84cc16;
}

.hbox,
.u {
  width: 700rpx;
  height: 80rpx;
  font-size: 26rpx;
}

.role {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 24rpx;
}

switch {
  margin-right: 32rpx;
  margin-left: 8rpx;
}

slider {
  flex-grow: 1;
}

.input-placeholder {
  color: #fdba74;
}

.menu {
  background-color: #f8f0dc;
  padding: 48rpx 24rpx;
}

.room {
  padding: 16rpx;
  border: #f97316 1rpx solid;
  border-radius: 8rpx;
  box-sizing: border-box;
  width: 100%;
  height: 72rpx;
  margin-top: 16rpx;
}

.actions{
  flex: 1;
  width: 100%;
  justify-content: flex-end;
  padding-bottom: 32rpx;
}